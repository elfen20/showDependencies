<Window x:Class="analyzeCaveDeps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:analyzeCaveDeps"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="TBaseDir" TextWrapping="Wrap" Text="C:\" Grid.Column="0" Grid.ColumnSpan="2" Height="20" Margin="10,10,95,10"/>
        <Button x:Name="BAnalyze" Content="Analyze" HorizontalAlignment="Right" Margin="10,10,10,10" Width="75" Height="20" Grid.Column="1" Click="BAnalyze_Click"/>
        <ListBox x:Name="LBProjects" Grid.Row="1" SelectionChanged="LBProjects_Selected"/>
        <ListBox x:Name="LBDpendsOn" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Window>
